---
layout: null
---
{% assign first = true %}
{
"version": "https://jsonfeed.org/version/1",
"user_comment": "JSON feed for cocktailsandcoffee.com",
"title": "JSON Feed",
"description": "Internet Ramblings Fueled by Adult Beverages",
"home_page_url": "https://www.cocktailsandcoffee.com",
"feed_url": "https://www.cocktailsandcoffee.com/feeds/feed.json",
"author": {
"name": "Jimmy Little",
"url": "https://www.cocktailsandcoffee.com"
},
"items": [
{% for post in site.posts %}
    {% if post.title != null and post.title != empty %}
    {% unless first %},{% endunless %}{
        "title": {{post.title | jsonify}},
        "content": {{post.content | markdownify | strip_html | jsonify}},
        "link": "{{ site.baseurl }}{{ post.url }}",
        "date": "{{ post.date }}",
        "excerpt": "{{ post.snippet }}",
        "search_omit": "{{ post.search_omit }}",
        "img": "{{ site.baseurl }}/assets/img/post/{{post.img}}"
    }
    {% assign first = false %}
    {% endif %}
{% endfor %}
]
}